<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="700.0" maxWidth="1000.0" minHeight="700.0" minWidth="1000.0" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FXController.Controller">
    <left>
        <AnchorPane prefHeight="700.0" prefWidth="300.0" style="-fx-background-color: #20242b;" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="78.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../style/logo.png" />
                    </image>
                </ImageView>
                <Label fx:id="lblNameLname" layoutX="75.0" layoutY="149.0" text="Name Lastname" textAlignment="CENTER" textFill="#4184cf">
                    <font>
                        <Font size="21.0" />
                    </font>
                </Label>
                <Label fx:id="lblUsername" layoutX="116.0" layoutY="180.0" text="Username" textFill="#284474">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Label>
                <Button fx:id="btnNewReservation" layoutX="59.0" layoutY="287.0" mnemonicParsing="false" prefHeight="47.0" prefWidth="183.0" style="-fx-background-color: #4184cf; -fx-background-radius: 20;" text="New Reservation">
                    <font>
                        <Font name="Roboto" size="16.0" />
                    </font>
                </Button>
                <Button fx:id="btnReservations" layoutX="58.0" layoutY="377.0" mnemonicParsing="false" prefHeight="47.0" prefWidth="183.0" style="-fx-background-color: #4184cf; -fx-background-radius: 20;" text="Reservations">
                    <font>
                        <Font name="Roboto" size="16.0" />
                    </font>
                </Button>
                <Button fx:id="btnPasswordChange" layoutX="82.0" layoutY="628.0" mnemonicParsing="false" style="-fx-background-color: #20242b;" text="Change your password" textFill="#284474" />
            </children>
        </AnchorPane>
    </left>
    <right>
        <AnchorPane prefHeight="700.0" prefWidth="700.0" style="-fx-background-color: #282c34;" BorderPane.alignment="CENTER">
         <children>
            <TabPane layoutX="14.0" layoutY="28.0" prefHeight="358.0" prefWidth="672.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Acrive reservations">
                     <content>
                        <TableView fx:id="tableActive" prefHeight="302.0" prefWidth="672.0" style="-fx-background-color: #20242b;">
                          <columns>
                            <TableColumn prefWidth="75.0" text="Name" />
                            <TableColumn prefWidth="75.0" text="Destination" />
                              <TableColumn prefWidth="75.0" text="Date" />
                              <TableColumn prefWidth="75.0" text="Price" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </content>
                  </Tab>
                <Tab text="Past reservations">
                     <content>
                        <TableView fx:id="tablePast" prefHeight="377.0" prefWidth="672.0" style="-fx-background-color: #20242b;">
                           <columns>
                              <TableColumn prefWidth="75.0" text="Name" />
                              <TableColumn prefWidth="75.0" text="Destination" />
                              <TableColumn prefWidth="75.0" text="Date" />
                              <TableColumn prefWidth="75.0" text="Price" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </content>
                  </Tab>
                  <Tab text="Canceled reservations">
                     <content>
                        <TableView fx:id="tableCanceled" prefHeight="377.0" prefWidth="672.0" style="-fx-background-color: #20242b;">
                           <columns>
                              <TableColumn prefWidth="75.0" text="Name" />
                              <TableColumn prefWidth="75.0" text="Destination" />
                              <TableColumn prefWidth="75.0" text="Date" />
                              <TableColumn prefWidth="75.0" text="Price" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </content>
                  </Tab>
              </tabs>
            </TabPane>
            <Button fx:id="btnPay" layoutX="250.0" layoutY="522.0" mnemonicParsing="false" prefHeight="47.0" prefWidth="200.0" style="-fx-background-color: #4184cf; -fx-background-radius: 20;" text="Pay">
               <font>
                  <Font name="Roboto" size="16.0" />
               </font>
            </Button>
            <Button fx:id="btnCancelReservation" layoutX="250.0" layoutY="604.0" mnemonicParsing="false" prefHeight="47.0" prefWidth="200.0" style="-fx-background-color: #e44744; -fx-background-radius: 20;" text="Cancel Reservation">
               <font>
                  <Font name="Roboto" size="16.0" />
               </font>
            </Button>
            <Label layoutX="308.0" layoutY="415.0" text="Balance:" textAlignment="CENTER" textFill="#4184cf">
               <font>
                  <Font size="21.0" />
               </font>
            </Label>
            <Label fx:id="lblBalance" layoutX="314.0" layoutY="446.0" text="Monez" textAlignment="CENTER" textFill="#4184cf">
               <font>
                  <Font size="21.0" />
               </font>
            </Label>
         </children></AnchorPane>
    </right>
</BorderPane>
